	public Employee addEmployee(Employee employee) {
		return jdbcTemplate.update("insert into employees values(?,?,?,?)", new Object[] {employee.getEmployeeid(),employee.getEmployeeName(),employee.getEmployeeDepartment(),employee.getEmployeeSalary()},new EmployeesRowMapper);
	}

